{{!-- create a card to display the selected post --}}
<div class="posts">
    <div class="card">
        <div class="card-body">
            <h2>{{title}}</h2>
            <div class="cardBody">
                {{content}}
            </div>
            <div>
                <h5>Posted by {{user.username}} on {{format_date createdAt}}</h5>
            </div>
        </div>
    </div>
    <button class="btn updateBtn" data-id="{{id}}">Update Post</button>
    <button class="btn deleteBtn" data-id="{{id}}">Delete Post</button>
</div>

{{!-- Create a form to update the post. we are going to create it in the js file --}}
<div class="edit-Post-container">    
    <form class="edit-post-form" data-id="{{id}}">
        
    </form>
</div>

<div>
    <h3>Comments</h3>
</div>

{{!-- create a card to show each message if available --}}
{{#each post_comments}}
<div class="comments">
    <div class="card">
        <div class="card-body">
            <div class="cardBody">
                {{comment}}
            </div>
            <div>
                <h5>Posted by {{user.username}} on {{format_date createdAt}}</h5>
            </div>
        </div>
    </div>
</div>
{{/each}}
<script src="/js/dashboardPost.js"></script>