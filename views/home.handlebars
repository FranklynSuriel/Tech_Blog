{{!-- Create a card to show each Post --}}
<div class="posts">
    {{#each postData as |post| }}
    <div class="card">
        <div class="card-body">
            <h2>
                <a href="/post/{{id}}">{{post.title}}</a> {{!-- use /post/:id router to show all posts --}}
            </h2>
            <div class="cardBody">
                {{post.content}}
            </div>
            <div>
                <h5> Posted by {{post.user.username}} on {{format_date createdAt}}</h5>
            </div>
        </div>
    </div>
    {{/each}}
</div>